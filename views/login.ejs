<%- include("layouts/header", {title: "Login Page"}) %>
<style>
  .form-container {
    background: #fff;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    width: 320px;
    margin: 0 auto;
  }

  .form-container h2 {
    text-align: center;
    margin-bottom: 20px;
    color: #0f172a;
  }

  .form-group {
    margin-bottom: 15px;
  }

  .form-group label {
    display: block;
    margin-bottom: 6px;
    font-weight: bold;
    font-size: 14px;
    color: #334155;
  }

  .form-group input {
    width: 100%;
    padding: 10px;
    border-radius: 6px;
    border: 1px solid #cbd5e1;
    outline: none;
    font-size: 14px;
  }

  .form-group input:focus {
    border-color: #3b82f6;
    box-shadow: 0 0 4px rgba(59, 130, 246, 0.5);
  }

  .btn {
    width: 100%;
    padding: 12px;
    border: none;
    border-radius: 6px;
    background: #3b82f6;
    color: #fff;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .btn:hover {
    background: #2563eb;
  }
  .login_google {
    margin: 20px 0;
  }
</style>
<main>
  <h1>This is a Login page</h1>
  <div class="form-container">
    <h2>Login</h2>
    <form action="/login" method="POST">
      <div class="form-group">
        <label for="username">Username</label>
        <input
          type="text"
          id="username"
          name="username"
          placeholder="Enter username"
          required
        />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          placeholder="Enter password"
          required
        />
      </div>
      <button type="submit" class="btn">Login</button>
      <div class="login_google"></div>
      <a class="btn" href="/auth/google">Login with Google</a>
    </form>
  </div>
</main>

<%- include("layouts/footer") %>
